@{
    ViewBag.Title = "Languages";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var cultures = ViewBag.LanguagesList as System.Globalization.CultureInfo[];
    var ListItems = cultures.Select(c => new SelectListItem() { Text = c.EnglishName });
}

<h2>Languages</h2>

<div class="row">
    <div class="col-xs-6">
        @Html.ListBox("lang", ListItems)
    </div>
    <div class="col-xs-6">
        @Html.DropDownList("lang2", ListItems)
    </div>
</div>