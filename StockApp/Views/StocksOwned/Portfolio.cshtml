@model IEnumerable<StockApp.Models.StockOwned>  
  
@{  
    ViewData["Title"] = "Index";  
}  
  
<strong>Index</strong>  
  
<p>  
    <a asp-action="Create">Create New</a>  
</p>  
<table class="table">  
    <thead>  
        <tr>  
            <th>  
                @Html.DisplayNameFor(model => model.Stock_ID)  
            </th>  
            <th>  
                @Html.DisplayNameFor(model => model.Name)  
            </th>  
            <th>  
                @Html.DisplayNameFor(model => model.userID)  
            </th>  
            <th>  
                @Html.DisplayNameFor(model => model.initialInvestment)  
            </th>
            <th>  
                @Html.DisplayNameFor(model => model.CurrentValue)  
            </th>
            <th>  
                @Html.DisplayNameFor(model => model.numOfStocks)  
            </th> 
            <th>  
                @Html.DisplayNameFor(model => model.dateBought)  
            </th>    
            <th></th>  
        </tr>  
    </thead>  
    <tbody>  
@foreach (var item in Model) {  
        <tr>  
            <td>  
                @Html.DisplayFor(modelItem => item.Stock_ID)  
            </td>  
            <td>  
                @Html.DisplayFor(modelItem => item.Name)  
            </td>  
            <td>  
                @Html.DisplayFor(modelItem => item.userID)  
            </td>  
            <td>  
                @Html.DisplayFor(modelItem => item.initialInvestment)  
            </td>  
            <td>  
                @Html.DisplayFor(modelItem => item.CurrentValue)  
            </td>  
            <td>  
                @Html.DisplayFor(modelItem => item.numOfStocks)  
            </td>  
            <td>  
                @Html.DisplayFor(modelItem => item.dateBought)  
            </td>  
            <td>  
                @Html.ActionLink("Edit", "Edit", new { id = item.Stock_ID }) |  
                @Html.ActionLink("Delete", "DeleteStockOwned", new { id = item.Stock_ID }, new { onclick = "return confirm('Are you sure to delete?')" })  
            </td>  
        </tr>  
}  
    </tbody>  
</table>  